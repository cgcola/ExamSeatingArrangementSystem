<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button  ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.GridPane?>

<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.examseatingarrangementfinal.AddStudentController"
            prefWidth="400.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;">
    <stylesheets>
        /com/example/examseatingarrangementfinal/ui.css
    </stylesheets>
    <headerText>Enter student information</headerText>

    <content>
        <GridPane hgap="10.0" vgap="10.0" style="-fx-padding: 20; -fx-background-color: #FFFFFF;">
            <Label text="Course Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2C3E50; -fx-font-size: 13px;" />
            <TextField fx:id="courseCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-background-color: #F5F6F5; -fx-text-fill: #2C3E50; -fx-background-radius: 5; -fx-border-radius: 5;" />

            <Label text="Course Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2C3E50; -fx-font-size: 13px;" />
            <TextField fx:id="courseNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       style="-fx-background-color: #F5F6F5; -fx-text-fill: #2C3E50; -fx-background-radius: 5; -fx-border-radius: 5;" />

            <Label text="Exam Date/Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2C3E50; -fx-font-size: 13px;" />
            <TextField fx:id="examDateTimeField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       style="-fx-background-color: #F5F6F5; -fx-text-fill: #2C3E50; -fx-background-radius: 5; -fx-border-radius: 5;" />

            <Label text="Student ID:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2C3E50; -fx-font-size: 13px;" />
            <TextField fx:id="studentIdField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                       style="-fx-background-color: #F5F6F5; -fx-text-fill: #2C3E50; -fx-background-radius: 5; -fx-border-radius: 5;" />

            <Label text="Student Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2C3E50; -fx-font-size: 13px;" />
            <TextField fx:id="studentNameField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                       style="-fx-background-color: #F5F6F5; -fx-text-fill: #2C3E50; -fx-background-radius: 5; -fx-border-radius: 5;" />

            <Label text="Section:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2C3E50; -fx-font-size: 13px;" />
            <TextField fx:id="sectionField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                       style="-fx-background-color: #F5F6F5; -fx-text-fill: #2C3E50; -fx-background-radius: 5; -fx-border-radius: 5;" />
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.examseatingarangementfinal.SeatMapController"
      spacing="10.0" padding="20.0"
      prefHeight="600.0" prefWidth="800.0">

    <Label fx:id="roomInfoLabel" wrapText="true" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <GridPane fx:id="seatGrid" hgap="10.0" vgap="10.0" padding="20.0">
            <!-- Seats will be added dynamically -->
        </GridPane>
    </ScrollPane>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="printButton" text="Print Seat Map" onAction="#printSeatMap" />
        <Button fx:id="closeButton" text="Close" onAction="#closeWindow" />
    </HBox>

</VBox>

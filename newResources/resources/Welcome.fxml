<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.examseatingarrangementfinal.WelcomeController" style="-fx-background-color: #2C2F33;">
    <stylesheets>
        /com/example/examseatingarrangementfinal/ui.css
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <!-- Welcome Title -->
    <Label text="Exam Seating Arrangement System" style="-fx-text-fill: #FFFFFF;" accessibleText="Welcome to Exam Seating Arrangement System">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <!-- Description -->
    <Label text="Organize and manage exam seating arrangements efficiently." wrapText="true" alignment="CENTER" styleClass="secondary" accessibleText="Application description">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    
    <!-- Start Button with Loading Indicator -->
    <VBox alignment="CENTER" spacing="10.0">
        <Button fx:id="startButton" onAction="#startApplication" text="Start" prefWidth="100.0" styleClass="button" accessibleText="Start the application" />
        <ProgressIndicator fx:id="loadingIndicator" visible="false" prefWidth="30.0" prefHeight="30.0" style="-fx-progress-color: #42A5F5;" accessibleText="Loading indicator" />
    </VBox>
    
    <!-- Footer -->
    <Label text="2BSCS-2 Group 4" alignment="CENTER" styleClass="secondary" accessibleText="Developed by 2BSCS-2 Group 4">
        <font>
            <Font size="12.0" />
        </font>
    </Label>
</VBox>

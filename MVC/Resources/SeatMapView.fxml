<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #2C2F33;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.SeatMapController">
    <stylesheets>
       ui.css
    </stylesheets>

    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="roomInfoLabel" text="Room Information" wrapText="true"/>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#printSeatMap" text="Print" />
                        <Button mnemonicParsing="false" onAction="#closeWindow" text="Close" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true"
                    style="-fx-background: #1C1E21; -fx-background-color: #1C1E21; -fx-border-color: #4B4F55; -fx-border-radius: 5;"
                    BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="seatGrid" alignment="CENTER" hgap="10.0" vgap="10.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </GridPane>
            </content>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </ScrollPane>
    </center>
</BorderPane>
